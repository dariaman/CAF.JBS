@model IEnumerable<CAF.JBS.ViewModels.DownloadBillingVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Create">
    <div class="container" style="margin: auto; padding: 20px;">
        <div class="panel panel-primary" style="margin: auto;width:250px;">
            <div class="panel-heading">Download Billing</div>
            <div class="panel-body">
                <input type="checkbox" id="bcacc" /> BCA CC<br />
                <input type="checkbox" id="mandiricc" /> Mandiri CC <br />
                <input type="checkbox" id="bnicc" /> BNI CC <br />
                <input type="checkbox" id="megaonuscc" /> Mega On Us CC <br />
                <input type="checkbox" id="megaoffuscc" /> Mega Off Us CC
            </div>
            <div class="panel-body">
                <input type="checkbox" id="bcaac" /> BCA Auto Collection <br />
                <input type="checkbox" id="mandiriac" /> Mandiri Auto Collection <br />
                <input type="checkbox" id="bcaregulerpremium" /> BCA Reguler Premium <br />
                <input type="checkbox" id="bcaotherpayment" /> BCA Other Payment
            </div>
            <div class="panel-footer" style="margin: auto; padding: 10px;">
                <input type="submit" value="Create File" class="btn btn-success" />
                <input type="button" asp-action="DownloadVA" asp-controller="Billing" value="Download VA" class="btn btn-primary" />
            </div>
        </div>            
    </div>

</form>
