@using NonFactors.Mvc.Grid;

@model IEnumerable<CAF.JBS.ViewModels.PrefixcardViewModel>

@{
    ViewData["Title"] = "Card Issuer Bank";
}

<h2>Card Issuer Bank</h2>

<p style="text-align:right;">
    <a class="btn btn-primary" asp-action="Create">ADD</a>
</p>

@*@Html.AjaxGrid(Url.Action("GridPartial", new { param = "value" }))*@


@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.Prefix).Titled("Bin Number");
        columns.Add(model => model.TypeCard).Titled("Type");
        columns.Add(model => model.BankName).Titled("Acquirer Bank");
        columns.Add(model => model.Description).Titled("Description").Filterable(false);
        columns.Add(model => "</a>  <a class='glyphicon glyphicon-pencil' href='./Prefixcard/Edit/" + model.Prefix + "'></a>"  +
                            "</a>  <a class='glyphicon glyphicon-trash' href='./Prefixcard/Delete/" + model.Prefix + "'></a>").Encoded(false).Filterable(false);

    })
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 10;
        pager.RowsPerPage = 10;
    })
    .Sortable()
    .Filterable()
    .Css("table-hover")
)