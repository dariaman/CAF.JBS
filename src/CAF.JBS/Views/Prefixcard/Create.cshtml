@model CAF.JBS.ViewModels.PrefixcardViewModel



@{
    ViewData["Title"] = "Add Card Issuer Bank";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Card Issuer Bank</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Prefix" class="col-md-2 control-label">Bin Number</label>
            <div class="col-md-10">
                <input asp-for="Prefix" class="form-control" maxlength="8">
                <span asp-validation-for="Prefix" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label">Jenis Kartu </label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Type, Model.CCtypes, new { @class = "form-control" })
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Type" class="col-md-2 control-label">Bank </label>
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.bank_id, Model.banks,"--Bank--", new { @class = "form-control" })
                <span asp-validation-for="bank_id" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label">Description</label>
            <div class="col-md-10">
                <textarea data-val-maxlength-max="255" asp-for="Description" class="form-control" 
                          data-val-maxlength="The field Description must be a string with a maximum length of '255'." data-val="true"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
