@model CAF.JBS.ViewModels.DownloadBillingVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>
    $(document).ready(function () {
        $('#BniCC').change(function () {
            if (this.checked) {
                $('#MegaCC').fadeOut('fast');
                $('#MegaCC').checked = false;
            }
            else {
                $('#MegaCC').fadeIn('fast');
                $('#MegaCC').checked = false;
            }
        });

        $('#MegaCC').change(function () {
            if (this.checked) {
                $('#BniCC').fadeOut('fast');
                $('#BniCC').checked = false;
            }
            else {
                $('#BniCC').fadeIn('fast');
                $('#BniCC').checked = false;
            }
        });
    });
</script><br />
<b>
    <i>
        <p class="text-danger">
            @{
                if (TempData["ModelState"] != null)
                {
                    var pesan = (string[])TempData["ModelState"];
                    foreach (var lst in pesan)
                    {
                        @lst <br />
                    }
                }
            }
        </p>
    </i>
</b>

<form asp-action="Download">
