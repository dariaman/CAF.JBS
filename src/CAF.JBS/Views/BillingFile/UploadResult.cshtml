@model CAF.JBS.ViewModels.UploadResultBillingVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<form asp-action="UploadResult" enctype="multipart/form-data">
    <input type="hidden" asp-for="TranCode" />

    <div class="container" style="margin: auto; padding: 20px;">
        <div class="panel panel-primary" style="margin: auto;width:700px;">
            <div class="panel-heading"><b>Upload Result @Model.Description</b></div>
            <div class="panel-body">
                    <label asp-for="FileBill" class="col-md-2 control-label">File Result</label>
                    <div class="col-md-10">
                        <input type="file" asp-for="FileBill" class="form-control" accept=".xls, .txt"  />
                        <span asp-validation-for="FileBill" class="text-danger"></span>
                    </div>
            </div>
            <div class="panel-footer" style="margin: auto; text-align:center; padding: 10px;">
                <input type="submit" value="Upload" class="btn btn-success" />
                <input type="button" value="Back" class="btn btn-primary" onclick="location.href='@Url.Action("Index")'" />
            </div>
        </div>            
    </div>
</form>