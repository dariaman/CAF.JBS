@model CAF.JBS.ViewModels.BillingHoldViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Billing Hold</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="OldpolicyID" />
        <div class="form-group">
            <label asp-for="policy_No" class="col-md-2 control-label">PolicyNo</label>
            <div class="col-md-10">
                <input asp-for="policy_No" class="form-control" />
                <span asp-validation-for="policy_No" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ReleaseDate" class="col-md-2 control-label">Hold Date</label>
            <div class="col-md-10">
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="update" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
