@model CAF.JBS.ViewModels.BillingHoldViewModel

@{
    ViewData["Title"] = "Add Hold Billing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Hold Billing</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="policy_No" class="col-md-2 control-label">PolicyNo</label>
            <div class="col-md-10">
                <input asp-for="policy_No" class="form-control" />
                <span asp-validation-for="policy_No" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ReleaseDate" class="col-md-2 control-label">Hold Date</label>
            <div class="col-md-10">
                <input asp-for="ReleaseDate" class="form-control" />
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="save" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
