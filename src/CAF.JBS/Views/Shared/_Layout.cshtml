<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CAF.JBS</title>
        <link href="~/Content/MvcGrid/mvc-grid.css" rel="stylesheet">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery-2.2.4.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.min.js" asp-append-version="true"></script>

    <link href="~/DataTables/datatables.min.css" rel="stylesheet" />
    <script src="~/DataTables/datatables.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">CAF.JBS</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Master<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="Prefixcard" asp-action="index">Card Issuer Bank</a></li>
                            <li><a asp-area="" asp-controller="cctype" asp-action="index">Card Type</a></li>
                            <li><a asp-area="" asp-controller="Bank" asp-action="index">Bank</a></li>
                            <li><a asp-area="" asp-controller="ReasonMapingGroup" asp-action="index">Reject Mapping</a></li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Data Policy<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="PolicyBilling" asp-action="index">Policy</a></li>
                            <li><a asp-area="" asp-controller="PolicyAc" asp-action="index">Policy AC</a></li>
                            <li><a asp-area="" asp-controller="PolicyCc" asp-action="index">Policy CC</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">Billing<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a asp-area="" asp-controller="Billing" asp-action="index">Recurring</a></li>
                            <li><a asp-area="" asp-controller="BillingOther" asp-action="index">Others</a></li>
                            <li><a asp-area="" asp-controller="QuoteBilling" asp-action="index">Quote</a></li>
                            <li><a asp-area="" asp-controller="Rerate" asp-action="index">Rerate Recurring</a></li>
                            <li><a asp-area="" asp-controller="BillingHold" asp-action="index">Hold Billing</a></li>
                        </ul>
                    </li>

                    <li><a asp-area="" asp-controller="BillingFile" asp-action="index">Download Billing</a></li>
                    <li><a asp-area="" asp-controller="Upload" asp-action="index">Upload Result</a></li>
                    <li><a asp-area="" asp-controller="Report" asp-action="index">Report</a></li>
                </ul>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="body-content">
        @RenderBody()

        <hr />
        <footer>
            <p>&copy; 2017 - CAF.JBS</p>
        </footer>
    </div>

    <script src="~/Scripts/MvcGrid/mvc-grid.js"></script>
    <script>$('.mvc-grid').mvcgrid();</script>

    @RenderSection("scripts", required: false)
    
    <div id="myModal" class="modal fade" role="dialog"></div>
</body>
</html>