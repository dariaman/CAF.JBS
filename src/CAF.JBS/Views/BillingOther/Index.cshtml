@model IEnumerable<CAF.JBS.ViewModels.BillingOthersVM>
@using NonFactors.Mvc.Grid;

@{
    ViewData["Title"] = "Billing Others";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .kanan {
        text-align:right;
    }
    .tengah {
        text-align:center;
    }
</style>
<h2>Billing Others</h2>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model => model.BillingID).Titled("BillingID");
        columns.Add(model => model.PolicyNo).Titled("PolicyNo");
        columns.Add(model => model.BillingType).Titled("Billing Type").Css("tengah").Filterable(false);
        columns.Add(model => model.BillingDate).Titled("BillingDate").Formatted("{0:dd-MM-yyyy}").Filterable(false);
        columns.Add(model => model.TotalAmount).Titled("Amount").Formatted("{0:#,###}").Css("kanan").Filterable(false);
        columns.Add(model => model.cancel_date).Titled("CancelDate").Formatted("{0:dd-MM-yyyy}").Css("tengah").Filterable(false);
        columns.Add(model => model.status_billing).Titled("Status").Css("tengah").Filterable(false);
        columns.Add(model => model.paid_date).Titled("PaidDate").Formatted("{0:dd-MM-yyyy}").Css("tengah").Filterable(false);
        columns.Add(model => model.BillingDate).Titled("CreateDate").Formatted("{0:dd-MM-yyyy}").Css("tengah").Filterable(false);
        columns.Add(model => model.LastUploadDate).Titled("UploadDate").Formatted("{0:dd-MM-yyyy}").Css("tengah").Filterable(false);
    }).Empty("No data found")
    .Pageable(pager =>
    {
        pager.PagesToDisplay = 10;
        pager.RowsPerPage = 10;
    })
    .Sortable()
    .Filterable()
    .Css("table-hover")
)